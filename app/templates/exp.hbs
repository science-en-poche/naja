<div class="row-fluid">
  <div class="offset2 span8">
    <h1>{{#linkTo 'user' owner}}{{owner.id}}{{/linkTo}} / {{name}}</h1>
    <h2><small>{{description}}</small></h2>
  </div>
</div>
<div class="row-fluid">
  {{#if currentUserHasAccess}}
    {{outlet}}
  {{else}}
    <div class="offset2 span8">
      <h2>Oops!</h2>
      <hr>
      {{#if isAuthenticated}}
        <p>You don't have access to this page... you're not working with {{#linkTo 'user' owner}}{{owner.id}}{{/linkTo}} on this experiment.</p>
      {{else}}
        <p>You don't have access to this page... did you forget to log in?</p>
      {{/if}}
    </div>
  {{/if}}
</div>
